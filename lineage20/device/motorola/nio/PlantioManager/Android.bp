java_library {
    name: "devtitans.plantiomanager",

    srcs: [ "src/**/*.java" ],

    static_libs: [ "devtitans.plantio-V1-java" ],      // Usa a biblioteca gerada pelo AIDL
    required:    [ "devtitans.plantiomanager.xml" ],   // Requer o arquivo de permissão (abaixo)

    system_ext_specific: true,                           // O App será instalado na partição system_ext
    platform_apis:       true,                           // Permite usar APIs escondidas ("@hide")
    installable:         true,                           // Copia a biblioteca para a imagem do Android
}

// Copia o arquivo de permissão para o system_ext/etc/permissions
prebuilt_etc {
    name: "devtitans.plantiomanager.xml",
    src:  "devtitans.plantiomanager.xml",
    filename_from_src:     true,
    relative_install_path: "permissions",
    system_ext_specific:   true,
}